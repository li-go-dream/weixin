/* pages/mall/mall.wxss */
page{
  height: 100%;
}
.page{
  height: 100%;
}
.page__bd{
  height: 100%;
}
.weui-tab{
  width: 100%;
  float: left;
}
.weui-navbar{
  flex-direction: column;
  display: inline-block;
  height: 100%;
  width: 20%;
  border: 1px solid #cccccc;
}
.weui-navbar__slider{
  width: 100%;
}
.weui-tab__panel{
  float: right;
  width: 80%;
  padding: 10px;
}
.content-item{
  float: left;
  width: 160rpx;
  height: 160rpx;
  padding: 5px;
  text-align: center;
  margin-bottom: 20px;
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-item .content-item-text{
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  top: 175rpx;
  font-size: 12px;
}